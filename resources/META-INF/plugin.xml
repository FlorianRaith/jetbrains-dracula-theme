  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <themeProvider id="371dce76-a3c5-4429-91af-41cf86094744" path="/Dracula.theme.json"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

